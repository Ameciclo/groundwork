# Database settings
KONG_DATABASE=postgres
KONG_PG_HOST=your-db-host.example.com
KONG_PG_PORT=25060
KONG_PG_USER=doadmin
KONG_PG_DATABASE=kong
KONG_PG_PASSWORD=your_password_here
KONG_PG_SSL=on

# Proxy settings
KONG_PROXY_LISTEN=0.0.0.0:80, 0.0.0.0:443 ssl

# Admin API settings
KONG_ADMIN_LISTEN=0.0.0.0:8001

# Kong Manager settings
KONG_ADMIN_GUI_LISTEN=0.0.0.0:8002
KONG_ADMIN_GUI_AUTH=basic-auth
KONG_ADMIN_GUI_SESSION_SECRET=your_session_secret_here

# Misc settings
KONG_LOG_LEVEL=notice
KONG_DOCKER_TAG=latest
